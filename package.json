{
  "name": "cachie",
  "version": "0.0.0",
  "description": "REST API server for the an in-memory cache analytics engine",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "labete",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-openapi": "^1.5.0",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "dotenv": "^16.4.7",
    "eslint": "^8.54.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^13.0.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {}
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run lint"
    }
  }
}
